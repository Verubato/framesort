<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/..\FrameXML\UI.xsd">
    <!-- Load the addon table structure (pseudo-namespaces) first -->
    <Script file="Namespace.lua"/>

    <!-- Load files that don't have any other dependencies -->
    <Script file="Logging\Log.lua"/>
    <Script file="Collections\Enumerable.lua"/>
    <Script file="Configuration\LayoutType.lua"/>
    <Script file="Configuration\SortMode.lua"/>
    <Script file="Numerics\Math.lua"/>

    <!-- Load core wow files that other files need -->
    <Script file="WoW\WoW.lua"/>
    <Script file="WoW\Unit.lua"/>
    <Script file="WoW\Frame.lua"/>
    <Script file="WoW\Macro.lua"/>

    <!-- Scheduler requires core wow files -->
    <Script file="Scheduling\Scheduler.lua"/>

    <!-- Comparer requires core wow files -->
    <Script file="Collections\Comparer.lua"/>

    <!-- Frame providers require core wow files -->
    <Script file="Providers\Provider.lua"/>
    <Script file="Providers\Blizzard.lua"/>
    <Script file="Providers\sArena.lua"/>
    <Script file="Providers\GladiusEx.lua"/>
    <Script file="Providers\ElvUI.lua"/>

    <!-- Health check requires frame providers -->
    <Script file="Health\HealthCheck.lua"/>

    <!-- Load modules -->
    <Script file="Modules\Sort.lua"/>
    <Script file="Modules\HidePlayer.lua"/>
    <Script file="Modules\Spacing.lua"/>
    <Script file="Modules\Targeting.lua"/>
    <Script file="Modules\Macro.lua"/>

    <!-- Api requires modules -->
    <Script file="Api\Api.lua"/>
    <Script file="Api\v1.lua"/>

    <!-- Configuration requires modules -->
    <Script file="Configuration\Options.lua"/>
    <Script file="Configuration\Defaults.lua"/>
    <Script file="Configuration\Upgrader.lua"/>
    <Script file="Configuration\Sorting.lua"/>
    <Script file="Configuration\Spacing.lua"/>
    <Script file="Configuration\Keybindings.lua"/>
    <Script file="Configuration\Macro.lua"/>
    <Script file="Configuration\SortingMethod.lua"/>
    <Script file="Configuration\Integrations.lua"/>
    <Script file="Configuration\HealthCheck.lua"/>

    <!-- Now initialise the addon -->
    <Script file="Init.lua"/>
</Ui>
